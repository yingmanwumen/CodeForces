# ğŸ¨ Base Settings
profile = default
margin = 80

# ğŸ“ Indentation & Alignment
indent-after-open-paren = 2
let-binding-spacing = compact
field-space = tight

# ğŸ”¤ Sequence Style
sequence-style = separator
break-sequences = true
dock-collection-brackets = true

# ğŸ¯ Wrapping & Breaks
break-fun-decl = wrap
wrap-fun-args = true
cases-exp-indent = 2
